<?xml version="1.0" encoding="UTF-8"?>
<!-- Nicolai Syvertsen 2023 <saivert@saivert.com> -->
<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0-only</project_license>
  <name>pwvucontrol</name>
  <summary>Volume control for pipewire</summary>
  <description>
    <p>A native volume control app made with GTK + Rust.</p>
  </description>
  <categories>
    <category>Audio</category>
  </categories>
  <screenshots>
    <screenshot type="default">
      <image>https://saivert.com/files/pwvucontrol-light.png</image>
      <caption>Main window</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/saivert/pwvucontrol</url>
  <url type="bugtracker">https://github.com/saivert/pwvucontrol/issues</url>
  <content_rating type="oars-1.0" />
  <releases>
    <release version="0.5.1" date="2025-10-22">
      <description>
        <p>Changelog since 0.5.0</p>
        <ul>
          <li>More granular LED blocks in the peak meter.</li>
          <li>Now saves the selected card profile.</li>
        </ul>
      </description>
    </release>
    <release version="0.5.0" date="2025-10-17">
      <description>
        <p>Changelog since 0.4.9</p>
        <ul>
          <li>Remember last used tab.</li>
          <li>Alt+number can be used to switch tab.</li>
          <li>Show placeholder message when no playback or recording streams are active.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.9" date="2025-03-17">
      <description>
        <p>Changelog since 0.4.8</p>
        <ul>
          <li>Add LED peak meter option.</li>
          <li>Add beep on volume change option (only output devices).</li>
          <li>Show product name in port dropdown (e.g. for HDMI ports).</li>
        </ul>
      </description>
    </release>
    <release version="0.4.8" date="2025-03-02">
      <description>
        <p>Changelog since 0.4.7</p>
        <ul>
          <li>Fix displaying of default device name in stream dropdown.</li>
          <li>Increase responsiveness of peak meters.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.7" date="2024-11-03">
      <description>
        <p>Changelog since 0.4.6</p>
        <ul>
          <li>Fix crash when selecting Pro Audio profile.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.6" date="2024-10-31">
      <description>
        <p>Changelog since 0.4.5</p>
        <ul>
          <li>Added polish, georgian, russian and french translation.</li>
          <li>Fix not all ports being visible in device port dropdown.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.5" date="2024-07-01">
      <description>
        <p>Changelog since 0.4.4</p>
        <ul>
          <li>Updated dutch translation.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.4" date="2024-07-01">
      <description>
        <p>Changelog since 0.4.3</p>
        <ul>
          <li>Added dutch translation.</li>
          <li>Application icons are now hidden in Flatpak build to keep permissions reduced.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.3" date="2024-06-15">
      <description>
        <p>Changelog since 0.4.2</p>
        <ul>
          <li>Added new icons for input and output devices.</li>
        </ul>
      </description>
    </release>
    <release version="0.4.2" date="2024-06-13">
      <description>
        <p>Changelog since 0.3.1</p>
        <ul>
          <li>Added support for over-amplification. Enable via hamburger menu.</li>
        </ul>
      </description>
    </release>
    <release version="0.3.1" date="2023-12-21">
      <description>
        <p>Changelog since 0.2.0</p>
        <ul>
          <li>Added card tab for selecing sound card profile</li>
        </ul>
      </description>
    </release>
    <release version="0.2.0" date="2023-08-11" />
    <release version="0.1.0" date="2023-08-01" />
  </releases>
  <kudos>
    <!--
       GNOME Software kudos:
       https://gitlab.gnome.org/GNOME/gnome-software/-/blob/main/doc/kudos.md
     -->
    <kudo>ModernToolkit</kudo>
    <kudo>HiDpiIcon</kudo>
  </kudos>
  <developer_name>Nicolai Syvertsen</developer_name>
  <update_contact>saivert@saivert.com</update_contact>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
</component>
